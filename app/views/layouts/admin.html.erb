<!DOCTYPE html>
<html>
  <head>
    <title>Chicken</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <main class="flex">
      <nav class="flex">
        <div class="w-64 p-4 h-screen bg-gray-600 sticky top-0">
          <div class="flex">
            <%= image_tag 'logo.png', class: 'w-16' %>
            <h1 class="text-md py-4 text-gray-50 font-bold hidden md:block">Ecomm Admin
            </h1>
          </div>
          <ul class="flex flex-col text-gray-400">
            <li class="flex">
              <%= link_to admin_path, class: "px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                <%= icon('fa-solid', 'gauge-high')%> <span class="hidden md:inline-block">Dashboard</span>
              <% end %>
            </li>
            <li class="flex">
              <%= link_to admin_products_path, class: "px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                <%= icon('fa-solid', 'cart-shopping')%> <span class="hidden md:inline-block">Product</span>
              <% end %>
            </li>
            <li class="flex">
              <%= link_to admin_categories_path, class: "px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                <%= icon('fa-solid', 'list')%> <span class="hidden md:inline-block">Categories</span>
              <% end %>
            </li>
            <li class="flex">
              <%= link_to admin_orders_path, class: "px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                <%= icon('fa-solid', 'truck-fast')%> <span class="hidden md:inline-block">Orders</span>
              <% end %>
            </li>
            <li class="flex">
              <%= link_to destroy_admin_session_path, data: {"turbo-method": :delete, "turbo-confirm":
              "Are you sure you want to sign out?"}, class: "px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                <%= icon('fa-solid', 'sign-out')%> <span class="hidden md:inline-block">Sign Out</span>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>
      <div class="py-4 px-8 w-full">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
